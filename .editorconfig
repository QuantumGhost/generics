root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.go]
indent_style = tab

[*.{js,ts}]
indent_style = tab

[Makefile]
indent_style = tab

[*.{json,jsonc}]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
